<?php
include("inc/connect_db.php");

$sql = "SELECT $field1, $field2, $field3, $field4 FROM $table ORDER BY id ASC";
$result = $conn->query($sql);

if ($result->num_rows > 0) {
  // output data of each row
  while($row = $result->fetch_assoc()) {
    echo "<div class='card'>id: " . $row[$field1]. "<br>Title: " . $row [$field2] . "<br>Comment: " . $row[$field3] . "<br>Signature: " . $row[$field4] . "<div class='del'><a href='inc/delete_blow.php?id=" . $row[$field1] . "'>DELETE</a></div></div>";
  }
} else {
  echo "0 results";
}
$conn->close();
?>